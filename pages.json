{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		}
	],
	"subPackages": [
		{
			"root": "navSubPage",
			"pages": [
				{
					"path": "index/index",
					"style": {
						// 自定义导航栏的前提
						"navigationStyle": "custom"
					}
				}
			]
		},{
			"root": "pagingSubPage",
			"pages": [
				{
					"path": "index/index",
					"style": {
						"navigationBarTitleText": "下拉刷新和上拉加载（1）",
						"enablePullDownRefresh": true, //将该属性配置为true，onPullDownRefresh才能生效
						"onReachBottomDistance": 50 //触底的距离，可配可不配，默认为50
					}
				}
			]
		},{
			"root": "pagingSubPage2",
			"pages": [
				{
					"path": "index/index",
					"style": {
						"navigationBarTitleText": "下拉刷新和上拉加载（2）"
					}
				}
			]
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#0090C4",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	"condition": {
		"current": 0,
		"list": [{
			"path": "pagingSubPage/index/index"
		}]
	}
}
